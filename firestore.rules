rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
			allow write: if request.auth.uid == request.resource.data.user;
      allow update: if request.auth.uid == request.resource.data.user &&
      								   request.auth.uid == resource.data.user;
			allow read, delete: if request.auth.uid == resource.data.user;
    }
  }
}
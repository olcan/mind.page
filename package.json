{
  "name": "functions",
  "description": "Sapper SSR on Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "npm run build && firebase serve",
    "serve_node": "npm run build && node __sapper__/build",
    "serve_functions": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start_functions": "npm run shell",
    "deploy": "npm run build && firebase deploy",
    "logs": "firebase functions:log",
    "build_ts": "tsc src/firebase/*.ts --outDir lib/firebase --tsBuildInfoFile lib/firebase/build.json --incremental --esModuleInterop",
    "build_sapper": "sapper build && pkill -f \"server.js$|sapper dev$\"",
    "build": "make firebase && sapper build && pkill -f \"server.js$|sapper dev$\"",
    "dev": "make firebase && ./run_sapper_dev",
    "export": "sapper export",
    "serve_export": "npx serve __sapper__/export",
    "start": "node __sapper__/build",
    "validate": "svelte-check --ignore src/node_modules/@sapper"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/firebase/functions.js",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "4.17.3",
    "firebase": "^9.6.10",
    "firebase-admin": "10.0.2",
    "firebase-auth": "^0.1.2",
    "firebase-functions": "^3.20.0",
    "npm": "^8.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.9",
    "@firebase/app": "^0.7.20",
    "@firebase/storage": "^0.9.4",
    "@octokit/rest": "^18.12.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@rollup/plugin-url": "^6.1.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/compression": "^1.7.2",
    "@types/node": "^17.0.23",
    "chokidar": "^3.5.3",
    "cookie-parser": "^1.4.6",
    "eslint": "^8.13.0",
    "eslint-plugin-promise": "^6.0.0",
    "firebase-functions-test": "^0.3.3",
    "js-sha1": "^0.6.0",
    "lodash": "^4.17.21",
    "marked": "^4.0.13",
    "murmurhash3js-revisited": "^3.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.3",
    "sirv": "^2.0.2",
    "svelte": "^3.47.0",
    "svelte-check": "^2.6.0",
    "svelte-loading-spinners": "^0.1.7",
    "svelte-preprocess": "^4.10.5",
    "typescript": "^4.6.3",
    "utf8": "^3.0.0"
  },
  "private": true
}

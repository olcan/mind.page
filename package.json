{
  "name": "functions",
  "description": "Sapper SSR on Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "npm run build && firebase serve",
    "serve_node": "npm run build && node __sapper__/build",
    "serve_functions": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start_functions": "npm run shell",
    "deploy": "npm run build && firebase deploy",
    "logs": "firebase functions:log",
    "build_ts": "tsc src/firebase/*.ts --outDir lib/firebase --tsBuildInfoFile lib/firebase/build.json --incremental --esModuleInterop",
    "build_sapper": "sapper build && (pkill -f \"server.js$|sapper dev$\"||true)",
    "build": "make firebase && sapper build && (pkill -f \"server.js$|sapper dev$\"||true)",
    "dev": "make firebase && ./run_sapper_dev",
    "export": "sapper export",
    "serve_export": "npx serve __sapper__/export",
    "start": "node __sapper__/build",
    "validate": "svelte-check --ignore src/node_modules/@sapper"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/firebase/functions.js",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "4.18.1",
    "firebase": "^9.8.4",
    "firebase-admin": "11.0.0",
    "firebase-auth": "^0.1.2",
    "firebase-functions": "^3.21.2",
    "npm": "^8.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/runtime": "^7.18.3",
    "@firebase/app": "^0.7.27",
    "@firebase/storage": "^0.9.8",
    "@octokit/rest": "^18.12.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@rollup/plugin-url": "^7.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/compression": "^1.7.2",
    "@types/node": "^18.0.0",
    "chokidar": "^3.5.3",
    "cookie-parser": "^1.4.6",
    "eslint": "^8.18.0",
    "eslint-plugin-promise": "^6.0.0",
    "firebase-functions-test": "^2.2.0",
    "js-sha1": "^0.6.0",
    "lodash": "^4.17.21",
    "marked": "^4.0.17",
    "murmurhash3js-revisited": "^3.0.0",
    "rollup": "^2.75.7",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.3",
    "sirv": "^2.0.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "svelte-loading-spinners": "^0.1.7",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.7.4",
    "utf8": "^3.0.0"
  },
  "private": true
}

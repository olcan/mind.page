{
  "name": "functions",
  "description": "Sapper SSR on Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "npm run build && firebase serve",
    "serve_node": "npm run build && node __sapper__/build",
    "serve_functions": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start_functions": "npm run shell",
    "deploy": "npm run build && firebase deploy",
    "logs": "firebase functions:log",
    "build_ts": "tsc src/firebase/*.ts --outDir lib/firebase --tsBuildInfoFile lib/firebase/build.json --incremental --esModuleInterop",
    "build_sapper": "sapper build",
    "build": "make firebase && sapper build",
    "dev": "make firebase && sapper dev",
    "export": "sapper export",
    "serve_export": "npx serve __sapper__/export",
    "start": "node __sapper__/build",
    "validate": "svelte-check --ignore src/node_modules/@sapper"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/firebase/functions.js",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "4.17.1",
    "firebase": "^9.0.2",
    "firebase-admin": "^9.11.1",
    "firebase-auth": "^0.1.2",
    "firebase-functions": "^3.15.6"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/runtime": "^7.15.4",
    "@firebase/app": "^0.7.0",
    "@firebase/storage": "^0.8.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@rollup/plugin-url": "^6.1.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/compression": "^1.7.2",
    "@types/node": "^16.9.2",
    "cookie-parser": "^1.4.5",
    "eslint": "^7.32.0",
    "eslint-plugin-promise": "^5.1.0",
    "firebase-functions-test": "^0.3.2",
    "lodash": "^4.17.21",
    "marked": "^3.0.4",
    "rollup": "^2.56.3",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.2",
    "sirv": "^1.0.17",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-loading-spinners": "^0.1.7",
    "svelte-preprocess": "^4.9.4",
    "typescript": "^4.4.3"
  },
  "private": true
}
